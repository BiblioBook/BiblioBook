<li  class="favorite col">
    <p>{{ number }}</p>
    <img src="{{ asset(src)}}" alt="Couverture du livre">
    <div>
        <h3>{{ title }}</h3>
        <div>
            <h4>Synopsis</h4>
            <p>{{ synopsis }}</p>
        </div>
        <div>
            <div class="stars">
                {% if stars != 5 %}
                    {% set missing_stars = 5 - stars %}
                    {% for star in 0.. missing_stars - 1 %}
                        <img src="{{ 'build/images/homepage/star-empty-icon.svg' }}" alt="Etoile vide">
                    {% endfor %}    
                {% endif %}
            </div>
            <div>{{ available ? 'Disponible' : 'Rupture' }}</div>
            <a type="button" href={{ more_href }}>
                Avis
            </a>
            <a type="button" href={{ review_href }}>
                En savoir plus
            </a>
        </div>
    </div>
</li>  